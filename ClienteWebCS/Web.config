<configuration>

    <system.web>
      <compilation debug="true" targetFramework="4.5" />
      <httpRuntime targetFramework="4.5" />
      <!--Configurar la seguridad de la aplicacion-->
      <authentication mode="Forms">
        <forms defaultUrl="Intranet/frmAlumno.aspx" loginUrl="Login.aspx" timeout="10" />
      </authentication>
    </system.web>

  <!--Configurar la parte intrusiva de JQUery-->
  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />    
  </appSettings>

  <connectionStrings>
    <add name="Cadena" connectionString="Server=localhost; Database=BDAcademico;
                        Integrated Security=true"/>
  </connectionStrings>
</configuration>
